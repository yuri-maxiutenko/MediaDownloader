<Window x:Class="YoutubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDownloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="210" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Download folder" Margin="0,10,0,0"/>
        <TextBox Grid.Column="0" Grid.Row="1" Margin="5" Text="{Binding DownloadFolderPath}"/>
        <Button Grid.Column="1" Grid.Row="1" Width="100" HorizontalAlignment="Left" Content="Browse..." Margin="5"
                Command="{Binding BrowseButtonClick}"/>

        <Label Grid.Column="0" Grid.Row="2" Content="Put YouTube link here!" Margin="0,10,0,0"/>
        <TextBox Grid.Column="0" Grid.Row="3" Margin="5" Text="{Binding YouTubeLink}"/>
        <Button Grid.Column="1" Grid.Row="3" Width="100" HorizontalAlignment="Left" Content="Clear" Margin="5"
                Command="{Binding ClearButtonClick}"/>

        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Width="200" Height="30" HorizontalAlignment="Center" Content="Download!"
                Margin="10" Command="{Binding DownloadButtonClick}"/>
    </Grid>
</Window>
